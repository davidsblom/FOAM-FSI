FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          motionProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh dynamicMotionSolverFvMesh;

solver RBFMeshMotionSolver;

movingPatches ( plate );

staticPatches ( cylinder outlet inlet top bottom );

coarsening
{
  enabled true;
  tol 1.0e-3;
  minPoints 10;
  maxPoints 2000;
  livePointSelection true;
  tolLivePointSelection 1.0e-2;
  exportSelectedPoints false;
}

interpolation
{
  function TPS;
}
