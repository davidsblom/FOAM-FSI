FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSolution;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-13;
        relTol           1.0e-2;
    };

    U
    {
        solver          BiCGStab;
        preconditioner  DILU;
        tolerance       1e-13;
    };
}

PIMPLE
{
    tolerance 1.0e-12;
    relTol 1.0e-6;
    maxIter 20;
    minIter 1;
    nCorrectors 10;
    nNonOrthogonalCorrectors 0;
    pisoTol 1.0e-3;
}

relaxationFactors
{
    U 0.9;
    p 0.9;
}

