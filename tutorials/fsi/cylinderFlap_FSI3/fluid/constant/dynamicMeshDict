FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          motionProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh dynamicMotionSolverFvMesh;

solver ElRBFMeshMotionSolver;

movingPatches ( plate );

staticPatches ( cylinder outlet inlet top bottom );

coarseningStrategy AdaptiveCoarsening;

interpolation
{
  function TPS;
}

UnitCoarsening
{
    tol 1e-3;
    minPoints 100;
    maxPoints 500;
}

AdaptiveCoarsening
{
    tol 1e-3;
    reselectionTol 1e-3;
    minPoints 100;
    maxPoints 1000;
}
