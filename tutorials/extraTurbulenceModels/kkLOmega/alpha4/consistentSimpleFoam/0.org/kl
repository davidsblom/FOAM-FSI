FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      kl;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $kl;

boundaryField
{
	"(top|bottom)"
    {
        type            fixedValue;
        value           uniform 0;
    }

    farfield
    {
        type           inletOutlet;
        inletValue     uniform $kl;
    }

    frontback
    {
        type           empty;
    }
}


