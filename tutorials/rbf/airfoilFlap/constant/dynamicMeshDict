FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      motionProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicMotionSolverFvMesh;

solver          RBFMeshMotionSolver;

movingPatches   ( flaptop flapbottom flapback );

staticPatches   ( wingtop wingbottom );

fixedPatches 	( farfield );

coarsening
{
  enabled false;
  tol 1.0e-3;
  minPoints 10;
  maxPoints 300;
  
  livePointSelection false;
  tolLivePointSelection 1e-4;
  exportSelectedPoints true;
}

interpolation
{
  function TPS;
}
