FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $velocity;

boundaryField
{
	"(top|bottom)"
    {
        type           fixedValue;
        value          uniform (0 0 0);
    }

    farfield
    {
        type           inletOutlet;
        inletValue          uniform $velocity;
    }

    frontback
    {
        type           empty;
    }

}


