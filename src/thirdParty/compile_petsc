#!/bin/bash

set -e

PETSC_VERSION=3.6.3
export PETSC_ARCH=x86_64

if [ ! -d "petsc-${PETSC_VERSION}" ]; then

  rm -rf petsc*

  wget http://ftp.mcs.anl.gov/pub/petsc/release-snapshots/petsc-lite-${PETSC_VERSION}.tar.gz

  tar -zxf petsc-lite-${PETSC_VERSION}.tar.gz

  rm petsc-lite-${PETSC_VERSION}.tar.gz

  cd petsc-${PETSC_VERSION}

  export PETSC_DIR=`pwd`

  if [ "$WM_COMPILE_OPTION" = "Opt" ]
  then
      ./config/configure.py --with-shared=1 --with-x=0 --with-mpi=1 --with-debugging=0 --download-mumps --download-scalapack --download-parmetis --download-metis
  elif [ "$WM_COMPILE_OPTION" = "Debug" ]
  then
      ./config/configure.py --with-shared=1 --with-x=0 --with-mpi=1 --with-debugging=1 --download-mumps --download-scalapack --download-parmetis --download-metis
  fi

  make

  make test

  cd ../

  cp petsc-${PETSC_VERSION}/${PETSC_ARCH}/lib/lib* ${FOAM_LIBBIN}/

fi

rm -f petsc
ln -s petsc-${PETSC_VERSION} petsc
